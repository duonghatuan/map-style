{
  "version": 8,
  "name": "Hoi An â€“ Da Nang Kiosk Light",
  "metadata": {
    "description": "Light tourist-friendly style for ticket kiosk in Hoi An & Da Nang",
    "author": "Custom by ChatGPT",
    "type": "kiosk"
  },
  "sources": {
    "openfreemap": {
      "type": "vector",
      "tiles": [
        "https://tiles.openfreemap.org/tiles/{z}/{x}/{y}.pbf"
      ],
      "minzoom": 0,
      "maxzoom": 14
    }
  },
  "glyphs": "https://tiles.openfreemap.org/fonts/{fontstack}/{range}.pbf",
  "sprite": "https://tiles.openfreemap.org/styles/liberty/sprite",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#F7F8F5"
      }
    },

    {
      "id": "water",
      "type": "fill",
      "source": "openfreemap",
      "source-layer": "water",
      "paint": {
        "fill-color": "#A7D8F0"
      }
    },

    {
      "id": "parks",
      "type": "fill",
      "source": "openfreemap",
      "source-layer": "landcover",
      "filter": ["==", "class", "park"],
      "paint": {
        "fill-color": "#CDECCF"
      }
    },

    {
      "id": "roads-major",
      "type": "line",
      "source": "openfreemap",
      "source-layer": "transportation",
      "filter": ["in", "class", "motorway", "primary"],
      "paint": {
        "line-color": "#F5A623",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          10, 2,
          14, 6
        ]
      }
    },

    {
      "id": "roads-secondary",
      "type": "line",
      "source": "openfreemap",
      "source-layer": "transportation",
      "filter": ["in", "class", "secondary", "tertiary"],
      "paint": {
        "line-color": "#FFFFFF",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          12, 1.2,
          15, 3
        ],
        "line-outline-color": "#CFCFCF"
      }
    },

    {
      "id": "roads-minor",
      "type": "line",
      "source": "openfreemap",
      "source-layer": "transportation",
      "filter": ["==", "class", "residential"],
      "minzoom": 14,
      "paint": {
        "line-color": "#E5E5E5",
        "line-width": 1
      }
    },

    {
      "id": "poi-tourism",
      "type": "symbol",
      "source": "openfreemap",
      "source-layer": "poi",
      "filter": [
        "in",
        "class",
        "attraction",
        "museum",
        "historic",
        "harbour",
        "information"
      ],
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Open Sans Semibold"],
        "text-size": [
          "interpolate", ["linear"], ["zoom"],
          12, 12,
          15, 16
        ],
        "text-offset": [0, 1.1],
        "text-anchor": "top"
      },
      "paint": {
        "text-color": "#2C3E50",
        "text-halo-color": "#FFFFFF",
        "text-halo-width": 1.5
      }
    },

    {
      "id": "place-labels",
      "type": "symbol",
      "source": "openfreemap",
      "source-layer": "place",
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Open Sans Bold"],
        "text-size": [
          "interpolate", ["linear"], ["zoom"],
          8, 14,
          12, 18
        ]
      },
      "paint": {
        "text-color": "#1F2D3D",
        "text-halo-color": "#FFFFFF",
        "text-halo-width": 2
      }
    }
  ]
}
