{
  "version": 8,
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "https://tiles.openfreemap.org/planet"
    }
  },
  "sprite": "https://tiles.openfreemap.org/sprites/ofm_f384/ofm",
  "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f5f7fa"
      }
    },

    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "#aadaff"
      }
    },

    {
      "id": "park",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "park",
      "paint": {
        "fill-color": "#d8f0d2",
        "fill-opacity": 0.9
      }
    },

    {
      "id": "landuse",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "paint": {
        "fill-color": "#f0f0f0"
      }
    },

    {
      "id": "road-motorway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", ["get", "class"], "motorway"],
      "paint": {
        "line-color": "#f5a623",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          6, 1.5,
          14, 6
        ]
      }
    },

    {
      "id": "road-primary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["match", ["get", "class"], ["primary", "trunk"], true, false],
      "paint": {
        "line-color": "#ffd27f",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          6, 1,
          14, 4
        ]
      }
    },

    {
      "id": "road-secondary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["match", ["get", "class"], ["secondary", "tertiary"], true, false],
      "paint": {
        "line-color": "#fff1c1",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          6, 0.8,
          14, 3
        ]
      }
    },

    {
      "id": "road-minor",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", ["get", "class"], "minor"],
      "paint": {
        "line-color": "#ffffff",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          12, 0.5,
          18, 2
        ]
      }
    }
  ]
}
